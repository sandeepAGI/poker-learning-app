name: Deploy Frontend to Production

on:
  push:
    branches:
      - main
    paths:
      - 'frontend/**'
      - '.github/workflows/deploy-frontend-production.yml'
  workflow_dispatch:  # Allow manual trigger

env:
  NODE_VERSION: '20'
  AZURE_STATIC_WEB_APP_NAME: poker-web-demo

jobs:
  build-and-deploy:
    name: Build and Deploy
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'
          cache-dependency-path: frontend/package-lock.json

      - name: Deploy to Azure Static Web Apps
        uses: Azure/static-web-apps-deploy@v1
        with:
          azure_static_web_apps_api_token: ${{ secrets.AZURE_STATIC_WEB_APPS_API_TOKEN }}
          repo_token: ${{ secrets.GITHUB_TOKEN }}
          action: "upload"
          app_location: "frontend"
          output_location: ".next"
          skip_app_build: false  # Let Azure's Oryx build Next.js with SSR support
        env:
          NEXT_PUBLIC_API_URL: https://poker-api-demo.azurewebsites.net
          NEXT_PUBLIC_ENVIRONMENT: production

      - name: Verify deployment
        run: |
          echo "âœ… Frontend deployment complete!"
          echo "Note: Static Web App URL will be shown in Azure Portal"
