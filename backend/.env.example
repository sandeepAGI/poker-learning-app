# Phase 4: LLM-Powered Hand Analysis Configuration
# Copy this file to .env and fill in your API key

# Anthropic API Key (required for LLM analysis)
# Get your API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# LLM Models (optional - defaults to latest Claude 4.5 models)
# Updated Dec 2025 to use latest models (avoiding Feb 2026 deprecations)
LLM_MODEL_QUICK=claude-haiku-4-5
LLM_MODEL_DEEP=claude-sonnet-4-5-20250929

# Feature Flags
LLM_CACHE_ENABLED=true
LLM_FALLBACK_TO_RULES=true

# Cost Monitoring
LLM_MAX_COST_PER_DAY=100.0
